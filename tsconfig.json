{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "node",
		"outDir": "./lib",
		"rootDir": "./src",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
	},
	"paths": {
		"@/*": [
			"./src/*"
		]
	},
	"include": [
		 "src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}