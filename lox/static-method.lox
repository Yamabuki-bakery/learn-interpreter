class Math {
  static square(x) {
    return x * x;
  }
  static pi() {
    return 3.14;
  }
  static one_over_pi() {
    return 1 / this.pi();
  }
}

class Circle {
  init(radius) {
    this.radius = radius;
  }
  area() {
    return Math.pi() * Math.square(this.radius);
  }
}

print "3 的平方是：" + Math.square(3); 
print "π 分之 1 是：" + Math.one_over_pi(); 

var c = Circle(3);
print "半徑 3 圓形的面積是👉🏻 " + c.area(); 


Math.e = fun () {
  print "插入了一個新的靜態方法 e()！";
  return 2.71;
}; 
print "自然對數是：" + Math.e(); 

var m = Math();  
print m.pi();  // 靜態方法不能被實例呼叫
print m.square(3); 


